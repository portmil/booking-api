{
  "name": "booking-api",
  "version": "1.0.0",
  "description": "Meeting room booking REST API",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "db:migrate": "knex migrate:latest",
    "db:migrate:rollback": "knex migrate:rollback",
    "db:seed": "knex seed:run",
    "dev": "knex migrate:latest && knex seed:run && tsx watch src",
    "format": "prettier \"src/**/*.ts\" --write",
    "lint": "eslint src",
    "lint:fix": "eslint . --fix",
    "start": "knex migrate:latest && node dist/index.js"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.3.1",
    "express": "^5.2.1",
    "slonik": "^48.10.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "knex": "^3.1.0",
    "pg": "^8.17.2",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.3.3"
  }
}
